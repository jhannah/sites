<section class="bg-light-paper py-12 px-4">
  <h2 class="text-[clamp(1rem,_10vw,_5rem)] text-center">{{ en.event.tracks.title }}</h2>
  <p class="text-base md:text-2xl  text-center">{{ en.event.tracks.description }}</p>

  <div class="grid gap-12 mt-8 lg:grid-cols-4 sm:grid-cols-2 grid-cols-1 lg:grid-rows-1 grid-rows-auto xs:grid-cols-1 xs:grid-rows-4 items-top">
    {% for track in en.event.tracks.tracks %}
      <div>
        <img src="/assets/images/{{ track.name | lower | replace(' ', '-') }}.png" class="w-full" width="160" height="90">
        <p class="mt-4">{{ track.description | safe }}</p>
      </div>
    {% endfor %}
  </div>
</section>
